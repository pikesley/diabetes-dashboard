<% content_for :title do %>diabetes dashboard
<% end %>
<div class="gridster">
  <ul>

    <li data-row="1" data-col="0" data-sizex="4" data-sizey="2">
      <div data-id="daily-blood-glucose" data-view="Graph" data-title="Blood-glucose, last 24 hours. Average:" style="background-color:#ff9618"></div>
    </li>

    <li data-row="3" data-col="0" data-sizex="4" data-sizey="2">
      <div data-id="weekly-blood-glucose" data-view="Graph" data-title="Blood-glucose, last 7 days. Average:" style="background-color:#ff9618"></div>
    </li>

    <li data-row="5" data-col="0" data-sizex="4" data-sizey="2">
      <div data-id="monthly-blood-glucose" data-view="Graph" data-title="Blood-glucose, last 30 days. Average:" style="background-color:#ff9618"></div>
    </li>

    <li data-row="1" data-col="5" data-sizex="2" data-sizey="2">
      <div data-id="weekly-breakfast-doses" data-view="Graph" data-title="Breakfast meds, last 7 days. Average:" style="background-color:#69D2E7"></div>
    </li>

    <li data-row="1" data-col="7" data-sizex="2" data-sizey="2">
      <div data-id="weekly-lunch-doses" data-view="Graph" data-title="Lunch meds, last 7 days. Average:" style="background-color:#69D2E7"></div>
    </li>

    <li data-row="3" data-col="5" data-sizex="2" data-sizey="2">
      <div data-id="weekly-dinner-doses" data-view="Graph" data-title="Dinner meds, last 7 days. Average:" style="background-color:#69D2E7"></div>
    </li>

    <li data-row="3" data-col="7" data-sizex="2" data-sizey="2">
      <div data-id="weekly-bedtime-doses" data-view="Graph" data-title="Bedtime meds, last 7 days. Average: " style="background-color:#A7DBD8"></div>
    </li>

  </ul>
</div>